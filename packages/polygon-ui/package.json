{
  "name": "@rektangel/polygon-ui",
  "version": "0.7.0",
  "description": "UI library for Rektangel",
  "author": "@ErikSamuelsson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/Rektangel/quadrilateral.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "files": [
    "dist"
  ],
  "types": "dist/types/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "react",
    "react-component"
  ],
  "scripts": {
    "build": "rollup -c",
    "lint": "stylelint ./src/**/*.scss && tsc --noEmit && eslint ./ --ext .ts,.tsx,.js",
    "prepare": "yarn run build",
    "prepublishOnly": "yarn run lint && yarn run jest --ci",
    "start": "start-storybook -p 6006",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": "@rektangel/eslint-config"
  },
  "stylelint": {
    "extends": "stylelint-config-sass-guidelines",
    "rules": {
      "order/properties-alphabetical-order": null,
      "selector-class-pattern": "^[a-zA-Z0-9\\-]+$"
    }
  },
  "devDependencies": {
    "@rektangel/eslint-config": "^1.5.1",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addons": "^6.0.28",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.0.28",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.0",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.15",
    "@types/react": "^16.9.55",
    "css-loader": "^5.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.1",
    "node-sass": "^5.0.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "rollup": "^2.33.0",
    "rollup-plugin-copy": "^3.3.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^3.1.8",
    "rollup-plugin-typescript2": "^0.29.0",
    "sass-loader": "^10.0.4",
    "storybook-dark-mode": "^1.0.3",
    "style-loader": "^2.0.0",
    "stylelint": "^13.7.2",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5"
  },
  "peerDependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "dependencies": {
    "classnames": "^2.2.6"
  }
}
